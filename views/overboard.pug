html
  head
    title whale
    include stylesheets.pug
  
  body(class="landing")
    include ./partials/nav.pug
    
  


    block content

    for anonymous in result[0]
      -let count = +`${anonymous.count}`
      -let countArray = new Array(count).fill('wave') 
      -let today = new Date();
      -let dd = today.getDate();
      -let mm = today.getMonth()+1; //January is 0!
      -let yyyy = today.getFullYear();
      -if(dd<10) {
      - dd = '0'+dd
      -} 
      -if(mm<10) {
      -mm = '0'+mm
      -} 
      -today = mm + '/' + dd + '/' + yyyy;
      div(class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center" class="clear-container")
            div(class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center")
              h1(class="display-3") total saved plastic:<br>#{count}
              h1(class="display-4") #{today} 

      .container
        div(class="row p-7")
          each wave in countArray
            div(class="card" class="wave-page" style="width: 10rem;")
              img(src="/images/wave.svg" class="rounded-circle" width="100" height="100" class="wave-it" class="mx-auto d-block")
    
